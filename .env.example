# ===========================================
# 环境变量配置示例
# 复制此文件为 .env 并填入实际值
# ===========================================

# 应用配置
NODE_ENV=development
PORT=3000
APP_NAME=Chat API

# 数据库配置
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_database_username
DB_PASSWORD=your_database_password
DB_NAME=your_database_name
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT配置 (请使用强密钥，建议64字符以上)
# 生成密钥命令: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your_super_secret_access_token_key_here
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS配置
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# 前后端URL配置
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# 安全配置
BCRYPT_SALT_ROUNDS=12
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# 开发工具
ENABLE_MORGAN_LOGGING=true
ENABLE_SWAGGER=true