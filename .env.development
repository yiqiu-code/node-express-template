 # ===========================================
# 开发环境配置
# ===========================================

# 应用配置
NODE_ENV=development
PORT=3000
APP_NAME=Chat API

# 数据库配置
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=auto_form
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT配置 (开发环境使用较短的过期时间便于测试)
JWT_ACCESS_SECRET=node -e "console.log(crypto.randomBytes(64).toString('hex'))"
JWT_REFRESH_SECRET=node -e "console.log(crypto.randomBytes(64).toString('hex'))"
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS配置
CORS_ORIGIN=http://localhost:5173,http://localhost:8080,http://127.0.0.1:5173
CORS_CREDENTIALS=true

# 前后端URL配置
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# 日志配置
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# 限流配置 (开发环境较宽松)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10

# 安全配置
BCRYPT_SALT_ROUNDS=10
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# 开发工具
ENABLE_MORGAN_LOGGING=true
ENABLE_SWAGGER=true