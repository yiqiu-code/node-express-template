# ===========================================
# 生产环境配置
# ===========================================

# 应用配置
NODE_ENV=production
PORT=3000
APP_NAME=Chat API

# 数据库配置 (生产环境需要修改为实际值)
DB_HOST=your_production_db_host
DB_PORT=3306
DB_USER=your_production_db_user
DB_PASSWORD=your_production_db_password
DB_NAME=chat_production
DB_POOL_MIN=5
DB_POOL_MAX=20

# JWT配置 (生产环境必须使用强密钥)
JWT_ACCESS_SECRET=your_super_secure_access_token_secret_minimum_64_characters_long
JWT_REFRESH_SECRET=your_super_secure_refresh_token_secret_minimum_64_characters_long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS配置 (生产环境限制域名)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# 前后端URL配置
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# 日志配置
LOG_LEVEL=error
LOG_FILE=logs/production.log

# 限流配置 (生产环境更严格)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
AUTH_RATE_LIMIT_MAX=5

# 安全配置
BCRYPT_SALT_ROUNDS=12
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# 生产环境禁用开发工具
ENABLE_MORGAN_LOGGING=false
ENABLE_SWAGGER=false

# SSL配置 (如果需要)
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt

# 监控配置
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics